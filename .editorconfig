# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
tab_width = 2
max_line_length = 120

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2