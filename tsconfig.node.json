  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types",
    ]
  },
  "include": ["*.config.ts", "*.config.js", "config/"]
}
